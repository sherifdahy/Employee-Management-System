<UserControl
    FlowDirection="RightToLeft"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyApp.WPF.UserControls.Admin.Companies"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:localVM="clr-namespace:App.Entities.Models;assembly=App.Entities"
    x:Class="MyApp.WPF.UserControls.Admin.Companies.CompaniesControl"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔍 مربع البحث -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search box -->
            <telerik:RadWatermarkTextBox
                Grid.Column="0"
                Width="400"
                HorizontalAlignment="Left"
                telerik:StyleManager.Theme="Fluent"
                x:Name="SearchBox"
                KeyUp="SearchBox_KeyUp"
                WatermarkContent="ابحث عن شركة..."
                Margin="0,0,10,0" />

            <!-- Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right"/>
        </Grid>

        <!-- 🟢 هنا الجدول هيمسك الـ Scroll -->
        <telerik:RadGridView 
            Grid.Row="1"
            SelectionUnit="FullRow"
            RowActivated="CompaniesDataGrid_RowActivated"
            x:Name="CompaniesDataGrid"
            IsReadOnly="True"
            AutoGenerateColumns="False"
            telerik:StyleManager.Theme="Windows11"
            ShowGroupPanel="False"
            IsFilteringAllowed="False"
            AllowDrop="False"
            CanUserResizeColumns="True"
            Margin="0"
            ScrollViewer.VerticalScrollBarVisibility="Auto">

            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Name}" Width="3*" Header="اسم الشركة"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding TaxRegistrationNumber}" Width="2*" Header="رقم التسجيل"/>
                <telerik:GridViewDataColumn DataMemberBinding="{Binding Address}" Width="3*" Header="العنوان"/>

                <!-- Edit button -->
                <telerik:GridViewDataColumn Width="auto">
                    <telerik:GridViewDataColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                                telerik:StyleManager.Theme="Crystal"
                                Click="EditBtn_Click" 
                                ToolTip="Edit"
                                Cursor="Hand"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/assets/icons/icons8-edit-64.png" Width="18" Height="18"/>
                                    <TextBlock Text="تعديل" Margin="5,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </telerik:GridViewDataColumn.CellTemplate>
                </telerik:GridViewDataColumn>

                <!-- Delete button -->
                <telerik:GridViewDataColumn Width="auto">
                    <telerik:GridViewDataColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                                telerik:StyleManager.Theme="Crystal"
                                Click="DeleteBtn_Click" 
                                ToolTip="Delete"
                                Cursor="Hand"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Source="/assets/icons/icons8-delete-96.png" Width="18" Height="18"/>
                                    <TextBlock Text="حذف" Margin="5,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </telerik:GridViewDataColumn.CellTemplate>
                </telerik:GridViewDataColumn>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

        <!-- Pager -->
        <StackPanel Grid.Row="2">
            <telerik:RadDataPager 
                telerik:StyleManager.Theme="Windows11"
                x:Name="CompaniesDataPager"
                PageSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
