<UserControl FlowDirection="RightToLeft" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="MyApp.WPF.UserControls.Admin.Companies.CompanyFromControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="900">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <!-- اسم الشركة -->
            <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
                <TextBlock Text="اسم الشركة" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox telerik:StyleManager.Theme="Fluent" Style="{DynamicResource ValidationTextBoxStyle}" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <!-- رقم التسجيل الضريبي -->
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
                <TextBlock Text="رقم التسجيل الضريبي" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox telerik:StyleManager.Theme="Fluent" Style="{DynamicResource ValidationTextBoxStyle}" Text="{Binding TaxRegistrationNumber, UpdateSourceTrigger=PropertyChanged}" MaxLength="9"/>
            </StackPanel>
            <!-- رقم الملف الضريبي -->
            <StackPanel Grid.Row="0" Grid.Column="2" Margin="10">
                <TextBlock Text="رقم الملف الضريبي" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox telerik:StyleManager.Theme="Fluent" Style="{DynamicResource ValidationTextBoxStyle}" Text="{Binding TaxFileNumber, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <!-- العنوان -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Margin="10">
                <TextBlock Text="العنوان" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox telerik:StyleManager.Theme="Fluent" Style="{DynamicResource ValidationTextBoxStyle}" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <!-- العملاء -->
            <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Margin="0,10,0,10">
                <telerik:RadButton Content="➕ اضافة عميل" HorizontalAlignment="Right" Style="{StaticResource BlueFlatButton}" Margin="0,0,0,10" Click="AddCustomerBtn_Click"/>
                <telerik:RadGridView x:Name="OwnersDataGrid" ItemsSource="{Binding Owners}" AutoGenerateColumns="False" ShowGroupPanel="False" IsReadOnly="True" RowHeight="40" AlternationCount="2" telerik:StyleManager.Theme="Windows11" FontSize="14">
                    <telerik:RadGridView.Columns>
                        <telerik:GridViewDataColumn Header="👤 الاسم" Width="2*" DataMemberBinding="{Binding Name}" />
                        <telerik:GridViewDataColumn Header="🆔 الرقم القومي" Width="2*" DataMemberBinding="{Binding NationalId}" />
                        <telerik:GridViewDataColumn Header="📞 الهاتف" Width="1.5*" DataMemberBinding="{Binding PhoneNumber}" />
                        <telerik:GridViewDataColumn Header="📍 العنوان" Width="3*" DataMemberBinding="{Binding Address}" />
                        <!-- Edit button -->
                        <telerik:GridViewDataColumn Width="auto">
                            <telerik:GridViewDataColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                telerik:StyleManager.Theme="Crystal"
                                Click="EditOwnerBtn_Click" 
                                ToolTip="Edit"
                                Cursor="Hand"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Image Source="/assets/icons/icons8-edit-64.png" Width="18" Height="18"/>
                                            <TextBlock Text="تعديل" Margin="5,0,0,0" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </telerik:GridViewDataColumn.CellTemplate>
                        </telerik:GridViewDataColumn>

                        <!-- Delete button -->
                        <telerik:GridViewDataColumn Width="auto">
                            <telerik:GridViewDataColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                x:Name="deleteOwnerBtn"
                                telerik:StyleManager.Theme="Crystal"
                                Click="DeleteOwnerBtn_Click" 
                                ToolTip="Delete"
                                Cursor="Hand"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Image Source="/assets/icons/icons8-delete-96.png" Width="18" Height="18"/>
                                            <TextBlock Text="حذف" Margin="5,0,0,0" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </telerik:GridViewDataColumn.CellTemplate>
                        </telerik:GridViewDataColumn>
                    </telerik:RadGridView.Columns>
                </telerik:RadGridView>
            </StackPanel>
            <!-- الايميلات -->
            <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Margin="0,10,0,10">
                <telerik:RadButton Content="➕ اضافة حساب" HorizontalAlignment="Right" Style="{StaticResource BlueFlatButton}" Margin="0,0,0,10" Click="AddEmailBtn_Click"/>
                <telerik:RadGridView x:Name="EmailsDataGrid" ItemsSource="{Binding Emails}" AutoGenerateColumns="False" ShowGroupPanel="False" IsReadOnly="True" RowHeight="40" AlternationCount="2" telerik:StyleManager.Theme="Windows11" FontSize="14">
                    <telerik:RadGridView.Columns>
                        <telerik:GridViewDataColumn Header="📧 البريد الإلكتروني" Width="*" DataMemberBinding="{Binding EmailAddress}" />
                        <telerik:GridViewDataColumn Header="🔑 كلمة المرور" Width="*" DataMemberBinding="{Binding Password}" />
                        <telerik:GridViewDataColumn Header="🏢 الجهة" Width="*" DataMemberBinding="{Binding OrganizationId}" />
                        <!-- Edit/Delete -->
                        <!-- Edit button -->
                        <telerik:GridViewDataColumn Width="auto">
                            <telerik:GridViewDataColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                telerik:StyleManager.Theme="Crystal"
                                Click="EditEmailBtn_Click" 
                                ToolTip="Edit"
                                Cursor="Hand"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Image Source="/assets/icons/icons8-edit-64.png" Width="18" Height="18"/>
                                            <TextBlock Text="تعديل" Margin="5,0,0,0" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </telerik:GridViewDataColumn.CellTemplate>
                        </telerik:GridViewDataColumn>

                        <!-- Delete button -->
                        <telerik:GridViewDataColumn Width="auto">
                            <telerik:GridViewDataColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                x:Name="deleteOwnerBtn"
                                telerik:StyleManager.Theme="Crystal"
                                Click="DeleteEmailBtn_Click" 
                                ToolTip="Delete"
                                Cursor="Hand"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Padding="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Image Source="/assets/icons/icons8-delete-96.png" Width="18" Height="18"/>
                                            <TextBlock Text="حذف" Margin="5,0,0,0" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </telerik:GridViewDataColumn.CellTemplate>
                        </telerik:GridViewDataColumn>
                    </telerik:RadGridView.Columns>
                </telerik:RadGridView>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>