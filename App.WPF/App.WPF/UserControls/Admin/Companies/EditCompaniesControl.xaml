<UserControl 
            FlowDirection="RightToLeft"
            xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:localVM="clr-namespace:MyApp.WPF.ViewModels"
            x:Class="MyApp.WPF.UserControls.Admin.Companies.EditCompaniesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp.WPF.UserControls.Admin.Companies"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0">
            <ContentControl Name="FormSection"/>
        </Border>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button x:Name="EditCompanyBtn" Content="حفظ التغيرات" Style="{DynamicResource BlueFlatButton}" Margin="10" telerik:StyleManager.Theme="Fluent" Width="200" HorizontalAlignment="Right" Click="EditCompanyBtn_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
