<UserControl
    x:Class="MyApp.WPF.UserControls.Admin.Companies.NewCompanyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyApp.WPF.UserControls.Admin.Companies"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:localVM="clr-namespace:MyApp.WPF.ViewModels"
    mc:Ignorable="d"
    FlowDirection="RightToLeft"
    Loaded="UserControl_Loaded"
    d:DesignHeight="1080" d:DesignWidth="1920">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Border>
                <ContentControl x:Name="FormControl"></ContentControl>
            </Border>
            <StackPanel Grid.Row="6" Grid.Column="2">
                <Button x:Name="CreateCompanyBtn" Content="انشاء" Margin="10" Style="{StaticResource BlueFlatButton}" Width="200" HorizontalAlignment="Right" Click="CreateCompanyBtn_Click"></Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
