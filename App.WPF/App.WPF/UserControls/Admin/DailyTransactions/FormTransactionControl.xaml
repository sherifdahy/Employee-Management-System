<UserControl 
    FlowDirection="RightToLeft"
    x:Class="MyApp.WPF.UserControls.Admin.DailyTransactions.FormTransactionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:MyApp.WPF.UserControls.Admin.DailyTransactions"
    mc:Ignorable="d" 
    Loaded="UserControl_Loaded" 
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
    xmlns:local1="clr-namespace:MyApp.WPF.ViewModels"
    d:DesignHeight="500" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- Error Template for showing validation errors -->
        <ControlTemplate x:Key="ErrorTemplate">
            <DockPanel>
                <Border BorderBrush="Red" BorderThickness="1" CornerRadius="2">
                    <AdornedElementPlaceholder/>
                </Border>
                <TextBlock DockPanel.Dock="Bottom" 
                          Text="{Binding ElementName=ErrorAdorner, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"
                          Foreground="Red" 
                          FontSize="10" 
                          Margin="2,1,0,0"/>
            </DockPanel>
        </ControlTemplate>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="telerik:RadWatermarkTextBox">
            <Setter Property="telerik:StyleManager.Theme" Value="Fluent"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComboBoxStyle" TargetType="telerik:RadComboBox">
            <Setter Property="telerik:StyleManager.Theme" Value="Fluent"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="telerik:RadDatePicker">
            <Setter Property="telerik:StyleManager.Theme" Value="Fluent"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NumericUpDownStyle" TargetType="telerik:RadNumericUpDown">
            <Setter Property="telerik:StyleManager.Theme" Value="Fluent"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}"/>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- نموذج الإدخال -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- الصف الأول -->
            <StackPanel Grid.Row="0" Grid.Column="0">
                <TextBlock Text="📅 تاريخ العهدة *" Style="{StaticResource LabelStyle}"/>
                <telerik:RadDatePicker Style="{StaticResource DatePickerStyle}"
                                       SelectedValue="{Binding TransactionDate, 
                                                      Mode=TwoWay, 
                                                      UpdateSourceTrigger=PropertyChanged,
                                                      ValidatesOnDataErrors=True,
                                                      NotifyOnValidationError=True}"
                                       x:Name="dateCustody"/>
            </StackPanel>

            <!-- الصف الثاني -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,8,0,0">
                <TextBlock Text="🏭 الشركة *" Style="{StaticResource LabelStyle}"/>
                <telerik:RadComboBox Style="{StaticResource ComboBoxStyle}"
                                     IsEditable="True"
                                     IsTextSearchEnabled="True"
                                     StaysOpenOnEdit="True"
                                     DisplayMemberPath="Name"
                                     SelectedValuePath="Id"
                                     KeyUp="cmbCompany_KeyUp"
                                     SelectedValue="{Binding CompanyId,
                                                    Mode=TwoWay,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    ValidatesOnDataErrors=True,
                                                    NotifyOnValidationError=True}"
                                     x:Name="cmbCompany"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,8,0,0">
                <TextBlock Text="📋 اسم المعاملة *" Style="{StaticResource LabelStyle}"/>
                <telerik:RadComboBox Style="{StaticResource ComboBoxStyle}"
                     IsEditable="True"
                     IsTextSearchEnabled="True"
                     StaysOpenOnEdit="True"
                     DisplayMemberPath="Name"
                     SelectedValuePath="Id"
                     SelectedValue="{Binding TransactionItemCategoryId,
                                    Mode=TwoWay,
                                    UpdateSourceTrigger=PropertyChanged,
                                    ValidatesOnDataErrors=True,
                                    NotifyOnValidationError=True}"
                     x:Name="cmbCategory"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="4" Margin="0,8,0,0">
                <TextBlock Text="💵 المبلغ *" Style="{StaticResource LabelStyle}"/>
                <telerik:RadNumericUpDown Style="{StaticResource NumericUpDownStyle}"
                                          NumberDecimalDigits="2"
                                          Minimum="0"
                                          Value="{Binding Amount,
                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged,
                                                 ValidatesOnDataErrors=True,
                                                 NotifyOnValidationError=True}"
                                          x:Name="numAmount"/>
            </StackPanel>

            <!-- الصف الثالث - المرفقات والملاحظة -->
            <StackPanel Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="3" Margin="0,8,0,0">
                <TextBlock Text="📁 المرفقات" Style="{StaticResource LabelStyle}"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <telerik:RadWatermarkTextBox Grid.Column="0"
                                                 Style="{StaticResource InputStyle}" 
                                                 WatermarkContent="اختر ملف..."
                                                 IsReadOnly="True"
                                                 Text="{Binding FileUrl}"
                                                 x:Name="txtFilePath"/>
                    <telerik:RadButton Grid.Column="2" 
                                       Content="📁" 
                                       Width="28" 
                                       Height="28" 
                                       telerik:StyleManager.Theme="Fluent"
                                       Background="#34495E"
                                       Foreground="White"
                                       FontSize="12"
                                       ToolTip="استعراض"
                                       x:Name="btnBrowseFile"/>
                    <telerik:RadButton Grid.Column="4" 
                                       Content="🗑️" 
                                       Width="28" 
                                       Height="28" 
                                       telerik:StyleManager.Theme="Fluent"
                                       Background="#E74C3C"
                                       Foreground="White"
                                       FontSize="12"
                                       ToolTip="مسح"
                                       x:Name="btnClearFile"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="7" Margin="0,8,0,0">
                <TextBlock Text="📝 الملاحظة" Style="{StaticResource LabelStyle}"/>
                <telerik:RadWatermarkTextBox Style="{StaticResource InputStyle}"
                        Height="65"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        WatermarkContent="أدخل الملاحظات والتفاصيل الإضافية..."
                        Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        x:Name="txtNotes"/>
            </StackPanel>
        </Grid>

        <!-- أزرار العمليات -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    Margin="0,8,0,10">
            <telerik:RadButton Content="➕ إضافة للقائمة" 
                   Width="110" 
                   Height="30" 
                   telerik:StyleManager.Theme="Fluent"
                   Background="#27AE60"
                   Foreground="White"
                   FontSize="11"
                   FontWeight="SemiBold"
                   Margin="0,0,8,0"
                   x:Name="btnAddToList"
                   Click="btnAddToList_Click"/>
            <telerik:RadButton Content="🗑️ مسح الكل" 
                                   Width="70" 
                                   Height="28" 
                                   telerik:StyleManager.Theme="Fluent"
                                   Background="#E74C3C"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   x:Name="btnClearAll"/>

        </StackPanel>

        <!-- الجدول -->
        <telerik:RadGridView Grid.Row="3"
                             x:Name="gridTransactions"
                             IsReadOnly="False"
                             ShowGroupPanel="False"
                             telerik:StyleManager.Theme="Windows11"
                             AutoGenerateColumns="False"
                             CanUserReorderColumns="True"
                             CanUserResizeColumns="True"
                             CanUserSortColumns="True"
                             GridLinesVisibility="Both"
                             FontSize="11"
                             RowHeight="28"
                             AlternationCount="2"
                             ItemsSource="{Binding TransactionItems,Mode=TwoWay}"
                             Background="White">

            <telerik:RadGridView.Columns>
                <telerik:GridViewDataColumn Header="📋 اسم المعاملة" 
                                            DataMemberBinding="{Binding Name}"
                                            Width="150"
                                            TextAlignment="Right"/>
                <telerik:GridViewDataColumn Header="🏭 الشركة" 
                                            DataMemberBinding="{Binding CompanyId}"
                                            Width="120"
                                            TextAlignment="Right"/>
                <telerik:GridViewDataColumn Header="💰 المبلغ" 
                                            DataMemberBinding="{Binding Amount, StringFormat=N2}"
                                            Width="90"
                                            TextAlignment="Right"/>
                <telerik:GridViewDataColumn Header="🪙 الفئة" 
                                            DataMemberBinding="{Binding TransactionItemCategoryId}"
                                            Width="100"
                                            TextAlignment="Center"/>
                <telerik:GridViewDataColumn Header="📝 الملاحظة" 
                                            DataMemberBinding="{Binding Note}"
                                            Width="*"
                                            TextAlignment="Right"/>
                <telerik:GridViewDataColumn Header="📁 المرفق" 
                                            DataMemberBinding="{Binding FileUrl}"
                                            Width="80"
                                            TextAlignment="Center"/>
                <telerik:GridViewColumn Header="🔧 العمليات" Width="100">
                    <telerik:GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <telerik:RadButton Content="📎" 
                                                   Width="22" 
                                                   Height="22" 
                                                   FontSize="10"
                                                   Background="#16A085"
                                                   Foreground="White"
                                                   Margin="1"
                                                   ToolTip="عرض المرفق"/>
                                <telerik:RadButton Content="✏️" 
                                                   Width="22" 
                                                   Height="22" 
                                                   FontSize="10"
                                                   Background="#F39C12"
                                                   Foreground="White"
                                                   Margin="1"
                                                   ToolTip="تعديل"/>
                                <telerik:RadButton Content="🗑️" 
                                                   Width="22" 
                                                   Height="22" 
                                                   FontSize="10"
                                                   Background="#E74C3C"
                                                   Foreground="White"
                                                   Margin="1"
                                                   ToolTip="حذف"/>
                            </StackPanel>
                        </DataTemplate>
                    </telerik:GridViewColumn.CellTemplate>
                </telerik:GridViewColumn>
            </telerik:RadGridView.Columns>
        </telerik:RadGridView>

        <!-- شريط الملخص والإجراءات السريعة -->
        <Grid Grid.Row="4" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- الحالة -->

            <!-- إحصائيات سريعة -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,15,0">
                <!-- عدد المعاملات -->

                <!-- إجمالي المبلغ -->
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>