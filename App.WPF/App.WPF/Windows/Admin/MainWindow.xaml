<Window
        FlowDirection="RightToLeft"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp.WPF.Windows.Admin"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="MyApp.WPF.Windows.Admin.MainWindow"
        mc:Ignorable="d"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="SubButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="45,10,10,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>

            <Style.Triggers>
                <!-- لما يكون الزرار مختار -->
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background" Value="#FFCCE5FF"/>
                    <!-- لون أزرق فاتح -->
                </Trigger>

                <!-- لما أعمل Hover -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD9F0FF"/>
                    <!-- لون Hover -->
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="30,10,10,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>

            <Style.Triggers>
                <!-- لما يكون الزرار مختار -->
                <Trigger Property="Tag" Value="Selected">
                    <Setter Property="Background" Value="#FFCCE5FF"/>
                    <!-- لون أزرق فاتح -->
                </Trigger>

                <!-- لما أعمل Hover -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFD9F0FF"/>
                    <!-- لون Hover -->
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Grid>

        <!-- تقسيم الشبكة -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- باقي الصفحة -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main Section -->
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#0057f6" Height="60" Padding="10">
            <Border.Effect>
                <DropShadowEffect Color="#0057f6" BlurRadius="10" ShadowDepth="0"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!-- اسم الصفحة -->
                <TextBlock x:Name="CurrentPageName" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Grid.Column="0"/>
                <!-- اسم المستخدم + الصلاحية -->
                <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="NameOfUserTxt" FontSize="16" FontWeight="Bold" Foreground="White" Text="شريف ضاحي 👋" />
                    <TextBlock x:Name="RoleOfUser" FontSize="12" Foreground="White" Text="مدير النظام" />
                </StackPanel>
            </Grid>
        </Border>





        <!-- Sidebar -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="#0057f6" BorderThickness="0,0,1,0" Background="White" Width="200" x:Name="SidebarBorder">
            <!-- Sidebar Content -->
            <StackPanel  x:Name="SidebarContent">
                <Button Style="{StaticResource MainButtonStyle}" Name="HomePageBtn" 
                    Content="الصفحة الرئيسية" Click="HomePageBtn_Click"/>

                <!-- Companies Section -->
                <telerik:RadExpander Header="الشركات" telerik:StyleManager.Theme="Fluent"
                                IsExpanded="False" Margin="0,5">
                    <StackPanel>
                        <Button Content="عرض الكل" Click="CompanyPageBtn_Click"
                             Style="{StaticResource SubButtonStyle}"/>
                        <Button Content="إنشاء جديد" Click="NewCompanyBtn_Click"
                             Style="{StaticResource SubButtonStyle}"/>
                    </StackPanel>
                </telerik:RadExpander>
                <!-- Employees Section -->
                <telerik:RadExpander Header="الموظفين" telerik:StyleManager.Theme="Fluent" IsExpanded="False" Margin="0,5">
                    <StackPanel>
                        <Button Content="عرض الكل" Click="EmployeesBtn_Click"
                                    Style="{StaticResource SubButtonStyle}"/>
                        <Button Content="إنشاء جديد" Click="CreateEmplyee_Click"
                                     Style="{StaticResource SubButtonStyle}"/>
                        <Button Content="صلاحيات مشاهدة الشركات" Click="UserAccessBtn_Click"
                                 Style="{StaticResource SubButtonStyle}"/>
                    </StackPanel>
                </telerik:RadExpander>
                <!-- Organizations Section -->
                <telerik:RadExpander Header="المنظمات" telerik:StyleManager.Theme="Fluent" IsExpanded="False" Margin="0,5">
                    <StackPanel>
                        <Button Content="عرض الكل" Click="OrganizationsBtn_Click"
                             Style="{StaticResource SubButtonStyle}"/>
                        <Button Content="إنشاء جديد" Click="AddOrganizationBtn_Click"
                             Style="{StaticResource SubButtonStyle}"/>
                    </StackPanel>
                </telerik:RadExpander>
                <telerik:RadExpander Header="العهد" telerik:StyleManager.Theme="Fluent" IsExpanded="False" Margin="0,5">
                    <StackPanel>
                        <Button Content="عرض الكل" Click="TransactionsBtn_Click"
                             Style="{StaticResource SubButtonStyle}"/>
                        <Button Content="إنشاء جديد" Click="NewTransactionBtn_Click"
                            Style="{StaticResource SubButtonStyle}"/>
                    </StackPanel>
                </telerik:RadExpander>
                <Button x:Name="SettingsBtn" Style="{StaticResource MainButtonStyle}" Content="الاعدادات" Click="SettingsBtn_Click" />
            </StackPanel>
        </Border>

        <!-- Main Section -->
        <Border Grid.Row="1" Grid.Column="1" Background="White">
            <ContentControl Name="MainSection"/>
        </Border>

    </Grid>
</Window>
